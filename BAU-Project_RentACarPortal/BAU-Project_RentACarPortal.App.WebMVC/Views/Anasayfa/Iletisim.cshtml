
@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Anasayfa">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>İletişim <i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Bizimle İletişime Geçin</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-4">
                <div class="row mb-5">
                    <div class="col-md-12">
                        <div class="border w-100 p-4 rounded mb-2 d-flex">
                            <div class="icon mr-3">
                                <span class="icon-map-o"></span>
                            </div>
                            <p><span>Address:</span> 198 West 21th Street, Suite 721 New York NY 10016</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="border w-100 p-4 rounded mb-2 d-flex">
                            <div class="icon mr-3">
                                <span class="icon-mobile-phone"></span>
                            </div>
                            <p><span>Phone:</span> <a href="tel://1234567920">+ 1235 2355 98</a></p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="border w-100 p-4 rounded mb-2 d-flex">
                            <div class="icon mr-3">
                                <span class="icon-envelope-o"></span>
                            </div>
                            <p><span>Email:</span> <a href="mailto:info@yoursite.com">info@yoursite.com</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 block-9 mb-md-5">
                <form action="#" class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input id="İsim" name="İsim" type="text" class="form-control" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <input id="Email" name="Email" type="email" class="form-control" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <input id="Konu" name="Konu" type="text" class="form-control" placeholder="Subject">
                    </div>
                    <div class="form-group">
                        <textarea id="Mesaj" name="Mesaj"  cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" onclick="createEmail()" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

<script>
    function createEmail() {
        var recipient = 'info@yoursite.com'; // Alıcı e-posta adresi
        var subject = '\Konu : ' + encodeURIComponent(document.getElementById('Konu').value);
        var message = encodeURIComponent(document.getElementById('Mesaj').value);
        var fromEmail = encodeURIComponent(document.getElementById('Email').value); // E-posta textbox'ından alınan değer

        var mailtoLink = `mailto:${recipient}?from=${fromEmail}&subject=${subject}&body=${message}`;
        window.location.href = mailtoLink;
    }
</script>