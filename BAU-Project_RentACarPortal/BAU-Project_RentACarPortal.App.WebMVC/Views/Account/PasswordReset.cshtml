@model PasswordResetViewModel
@{
    ViewData["Title"] = "PasswordResetControl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Anasayfa">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Şifre Güncelle<i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">Şifre Güncelle</h1>
            </div>
        </div>
    </div>
</section>

<section>
    <br />
    <br />
    <br />
    <div class="container">
        <div class="col-md-6 mx-auto">
            <div class="login p-5 bg-light mx-auto mw-100" style="border-radius:20px; border: 1px solid #ccc;">
                <h4 class="tittle text-center">Şifre Güncelle</h4>
                <form asp-controller="Account" asp-action="PasswordReset" method="post">
                    <input type="hidden" asp-for="Token"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="Password" class="form-label">Yeni Şifre</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Şifreyi Güncelle</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    </br>
    </br>
    </br>
</section>

