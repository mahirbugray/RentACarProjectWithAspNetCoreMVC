@model SigortaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ibox-content">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Admin</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/index">Admin</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Sigorta</strong>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Sigorta Ekle</strong>
                </li>
            </ol>
        </div>
    </div>
    <div class="col-md-12 mx-auto">
        <h4 class="tittle text-center">Yeni Sigorta</h4>
        <div class="login p-5 bg-light mx-auto mw-100">
            <form asp-action="Create" asp-controller="Sigorta" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SigortaAdi" class="control-label">Sigorta Adı</label>
                    <input asp-for="SigortaAdi" class="form-control" />
                    <span asp-validation-for="SigortaAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SigortaBaslangic" class="control-label">Sigorta Başlangıç Tarihi</label>
                    <input asp-for="SigortaBaslangic" type="date" class="form-control" />
                    <span asp-validation-for="SigortaBaslangic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SigortaBitis" class="control-label">Sigorta Bitiş Tarihi</label>
                    <input asp-for="SigortaBitis" type="date" class="form-control" />
                    <span asp-validation-for="SigortaBitis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SigortaUcret" class="control-label">Sigorta Ücreti</label>
                    <input asp-for="SigortaUcret" type="" class="form-control" />
                    <span asp-validation-for="SigortaUcret" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Sigorta Ekle" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>
