@model UserViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        /*        margin-top: 20px;
        */ color: #1a202c;
        text-align: left;
        /*        background-color: #e2e8f0;
        */
    }

    .main-body {
        /*            padding: 15px;
        */
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>

<div class="main-body">
    <section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/carbook-master/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
                <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs"><span class="mr-2"><a asp-action="Index" asp-controller="Anasayfa">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>Profilim <i class="ion-ios-arrow-forward"></i></span></p>
                    <h1 class="mb-3 bread">Profil Bilgileri</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb -->
    <!-- /Breadcrumb -->
    <br />
    <br />
    <br />
    <div class="container">
        <h2 class="text-center">Profilim</h2>
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Username</h4>
                                <p class="text-muted font-size-sm">@Model.Adres</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Website</h6>
                            <span class="text-secondary">https://bootdey.com</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github mr-2 icon-inline"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>Github</h6>
                            <span class="text-secondary">bootdey</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">İsim</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Name 
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Soyisim</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Surname
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">TC Kimlik Numarası</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.TCKNo
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                                @if (Model.PhoneNumber == null)
                                {
                                    <div class="col-sm-9 text-secondary">
                                      Telefon numarası kayıtlı değil
                                    </div>
                                }
                                else
                                {
                                    <div class="col-sm-9 text-secondary">
                                        @Model.PhoneNumber
                                    </div>
                                }
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Adres
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Cinsiyet</h6>
                            </div>
                            @if(Model.Cinsiyet == false)
                            {
                                <div class="col-sm-9 text-secondary">
                                    Erkek
                                </div>
                            }
                            else
                            {
                                <div class="col-sm-9 text-secondary">
                                    Kadın
                                </div>
                            }
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Doğum Tarihi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.DogumYili.ToShortDateString()
                            </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-secondary float-right m-3" asp-action="ProfilBilgiGuncelle" asp-controller="Profil">Profil Bilgilerini Güncelle</a>
                    </div>
                </div>
            </div>
            </div>
        <div>
            <div class="row">
                @if (@ViewBag.Kiralama != null)
                {
                    @foreach (var item in ViewBag.Kiralama)
                    {
                        <div class="col-md-12">
                            <table class="table table-striped table-bordered text-center">
                                <thead class="thead-dark">
                                    <tr class="text-center">
                                        <th colspan="4">
                                            Aktif Kiralama
                                        </th>
                                    </tr>
                                </thead>
                                <tr>
                                    <th>Plaka</th>
                                    <th>Fatura No</th>
                                    <th>Toplam Tutar</th>
                                    <th>Kiralama Tarihi</th>
                                </tr>
                                <tr>
                                    <td>@item.Plaka</td>
                                    <td>@item.FaturaNo</td>
                                    <td>@item.ToplamTutar</td>
                                    <td>@item.KiralamaTarihi</td>
                                </tr>
                                <tr class="text-center" >
                                    <td colspan="4"><a class="btn btn-rounded btn-outline-success" style="position:center ;" asp-action="Devret" asp-controller="Profil" asp-route-faturaNo="@item.FaturaNo">Devret</a></td>
                                </tr>
                            </table>
                            
                        </div>
                    }
                   
                }
                else
                {
                    <p>Aktif kiralamanız yok!</p>
                    <hr />
                    <p>Hemen kiralama yapabilirsin.</p>
                    <hr />
                    <div class="text-center mt-3">
                        <a class="btn btn-info btn-lg font-weight-bold" style="width: 200px; color:black;" asp-action="Index" asp-controller="Arabalar">En Uygun Arabayı Kirala</a>
                    </div>
                }
            </div>
        </div>
    </div>

<br />
<br />
<br />