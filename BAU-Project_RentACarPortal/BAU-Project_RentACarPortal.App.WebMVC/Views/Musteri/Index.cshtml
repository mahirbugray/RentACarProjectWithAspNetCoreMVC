@model List<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ibox-content">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Admin</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/index">Admin</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Müşteriler</strong>
                </li>
            </ol>

        </div>
    </div>
    <table class="footable table table-stripped toggle-arrow-tiny">
        <thead>
            <tr>

                <th data-toggle="true">Müşteri Adı</th>
                <th data-toggle="true">Müşteri Soyadı</th>
                <th data-toggle="true">Kullanıcı Adı</th>
                <th data-toggle="true">Telefon Numarası</th>
                <th data-toggle="true">TC Kimlik Numarası</th>
                <th data-toggle="true">Cinsiyet</th>
                <th data-toggle="true">Doğum Tarihi</th>
                <th data-toggle="true">Adres</th>
                <th data-toggle="true">EMail</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Username</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.TCKNo</td>
                    <td>@item.Cinsiyet</td>
                    <td>@item.DogumYili</td>
                    <td>@item.Adres</td>
                    <td>@item.Email</td>
                    <td>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="Musteri" asp-route-id="@item.Id" onclick="return confirm('Silmek İstiyor musunuz')">Sil</a>
                    </td>
                    @* <td>20%</td>
                <td>Jul 14, 2013</td>
                <td><a href="#"><i class="fa fa-check text-navy"></i></a></td>*@
                </tr>
            }
        </tbody>
    </table>

</div>

