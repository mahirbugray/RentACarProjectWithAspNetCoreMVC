@model FirmaViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ibox-content">
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-9">
            <h2>Admin</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/admin/index">Admin</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Firma</strong>
                </li>
                <li class="breadcrumb-item active">
                    <strong>Firma Ekle</strong>
                </li>
            </ol>
        </div>
    </div>
    <div class="col-md-12 mx-auto">
        <h4 class="tittle text-center">Yeni Firma</h4>
        <div class="login p-5 bg-light mx-auto mw-100">
            <form asp-action="Create" asp-controller="Firma" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirmaAdi" class="control-label"></label>
                    <input asp-for="FirmaAdi" class="form-control" />
                    <span asp-validation-for="FirmaAdi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirmaAdresi" class="control-label"></label>
                    <textarea asp-for="FirmaAdresi" class="form-control"></textarea>
                    <span asp-validation-for="FirmaAdresi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirmaTel" class="control-label"></label>
                    <input asp-for="FirmaTel" type="number" class="form-control" />
                    <span asp-validation-for="FirmaTel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fax" class="control-label"></label>
                    <input asp-for="Fax" type="number" class="form-control" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Firma Ekle" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>

